package com.object {		import flash.display.Sprite;	import flash.events.Event;	import com.greensock.*; 	import com.greensock.easing.*;			public class BG extends Sprite {						public function BG() {			this.addEventListener(Event.ADDED_TO_STAGE,loadInit);		}				public function loadInit(e:Event):void		{			this.removeEventListener(Event.ADDED_TO_STAGE,loadInit);			TweenMax.to(this, 0, {colorMatrixFilter:{colorize:0xff6666, amount:1}});			TweenMax.to(this, 3, {colorMatrixFilter:{colorize:null, amount:0},ease:Back.easeOut});			scale();		}				public function scale()		{			this.width = stage.stageWidth;			this.x = stage.stageWidth/2;			this.height = stage.stageHeight;			this.y = stage.stageHeight/2;		}	}	}
package com.object {		import flash.display.MovieClip;	import flash.events.Event;			public class Square extends MovieClip {						public function Square() {						this.addEventListener(Event.ADDED_TO_STAGE,loadInit);		}				public function loadInit(e:Event):void		{			this.alpha = .75;			scale();			this.removeEventListener(Event.ADDED_TO_STAGE,loadInit);			this.addEventListener(Event.REMOVED_FROM_STAGE,removeHandler);			this.addEventListener("ON_RESIZE",resizeHandler);		}				private function removeHandler(e:Event):void		{			this.removeEventListener(Event.REMOVED_FROM_STAGE,removeHandler);			this.removeEventListener("ON_RESIZE",resizeHandler);		}				public function resizeHandler(e:Event):void		{			scale();		}				public function scale():void		{			this.width = stage.stageWidth;			this.height = stage.stageHeight;					}	}	}
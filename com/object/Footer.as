package com.object {		import flash.display.MovieClip;	import flash.events.Event;			public class Footer extends MovieClip {						public function Footer() {			this.addEventListener(Event.ADDED_TO_STAGE,scaleEvent);		}				public function scaleEvent(e:Event):void		{			this.removeEventListener(Event.ADDED_TO_STAGE,scaleEvent);			scale();		}				public function scale()		{			this.square.width = stage.stageWidth;			this.right_txt.x = stage.stageWidth - this.right_txt.width;			this.right_txt.autoSize = "left";			this.y = stage.stageHeight - this.height;		}	}	}
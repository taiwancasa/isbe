package com.object {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import com.greensock.*;	import com.greensock.easing.*;		public class StepDesWindow extends MovieClip {						public function StepDesWindow() {			this.addEventListener(Event.ADDED_TO_STAGE,loadInit);					}						public function loadInit(e:Event):void		{			this.removeEventListener(Event.ADDED_TO_STAGE,loadInit);			btn.addEventListener(MouseEvent.CLICK,clickHandler);						btn.addEventListener(MouseEvent.MOUSE_OVER,overHandler);			btn.addEventListener(MouseEvent.MOUSE_OUT,outHandler);						this.alpha = 0;			TweenLite.to(this,1,{alpha:1});			this.addEventListener("ON_RESIZE",resizeHandler);			this.addEventListener(Event.REMOVED_FROM_STAGE,removeHandler);						step1.alpha = 0;			step2.alpha = 0;			step3.alpha = 0;			step1.x = -40;			step2.x = 140;			step3.x = 330;			TweenLite.to(step1,.7,{x:-25,alpha:1,ease:Quad.easeOut,delay:0});			TweenLite.to(step2,.7,{x:182,alpha:1,ease:Quad.easeOut,delay:.2});			TweenLite.to(step3,.7,{x:392,alpha:1,ease:Quad.easeOut,delay:.5});						scale();		}				public function overHandler(e:Event):void		{			TweenLite.to(btn,.3,{scaleX:1.2,scaleY:1.2,ease:Bounce.easeOut});		}				public function outHandler(e:Event):void		{			TweenLite.to(btn,.3,{scaleX:1,scaleY:1,ease:Quad.easeIn});		}				public function removeHandler(e:Event):void		{			this.removeEventListener("ON_RESIZE",resizeHandler);			this.removeEventListener(Event.REMOVED_FROM_STAGE,removeHandler);			this.dispatchEvent(new Event("clearStepWindow",true));		}				public function resizeHandler(e:Event):void		{			scale();		}				public function clickHandler(e:MouseEvent):void		{			TweenLite.to(this,1,{alpha:0,onComplete:finishAnimation});						this.removeEventListener(MouseEvent.CLICK,clickHandler);		}				public function finishAnimation()		{			parent.removeChild(this);		}				public function scale():void		{			this.x = stage.stageWidth/2;			this.y = stage.stageHeight/2;		}					}	}